generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  role      Role     @default(CLIENT)
  document  String?
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  cart      Json?
  orders    Order[]
}

model Product {
  id          Int         @id @default(autoincrement())
  name        String
  description String?
  brand       Brand
  price       Float
  imageUrl    String
  gender      Gender?
  stock       Int         @default(0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  orderItems  OrderItem[]
}

model Order {
  id              Int              @id @default(autoincrement())
  userId          Int?
  status          OrderStatus      @default(PENDING)
  totalAmount     Float
  shippingId      Int?             @unique
  paymentMethod   PaymentMethod
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  note            String?
  shippingAddress ShippingAddress? @relation("OrderToShippingAddress", fields: [shippingId], references: [id])
  user            User?            @relation(fields: [userId], references: [id])
  items           OrderItem[]
}

model ShippingAddress {
  id           Int      @id @default(autoincrement())
  country      String   @default("Colombia")
  department   String
  city         String
  addressLine1 String
  addressLine2 String?
  postalCode   String?
  document     String?
  phone        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  order        Order?   @relation("OrderToShippingAddress")
}

model OrderItem {
  id        Int     @id @default(autoincrement())
  orderId   Int
  productId Int
  quantity  Int     @default(1)
  price     Float
  order     Order   @relation(fields: [orderId], references: [id])
  product   Product @relation(fields: [productId], references: [id])
}

model playing_with_neon {
  id    Int    @id @default(autoincrement())
  name  String
  value Float? @db.Real
}

enum Role {
  ADMIN
  CLIENT
}

enum Brand {
  NATURA
  YANBAL
}

enum Gender {
  HOMBRE
  MUJER
  UNISEX
}

enum OrderStatus {
  PENDING
  PAID
  SHIPPED
  DELIVERED
  CANCELED
}

enum PaymentMethod {
  EFECTIVO
  TARJETA
  PSE
  CUOTAS
}
